{
  "name": "desaparecidos",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:security": "jest tests/security.test.js",
    "test:coverage": "jest --coverage",
    "security:scan": "node scripts/security-test.js",
    "security:zap": "zap-cli quick-scan --self-contained --start-options '-config api.disablekey=true' http://localhost:3000",
    "load:test": "artillery run scripts/load-test.yml",
    "load:test:report": "artillery run --output security-load-test.json scripts/load-test.yml && artillery report security-load-test.json",
    "security:full": "npm run test:security && npm run security:scan && npm run load:test",
    "security:report": "npm run security:full && npm run load:test:report",
    "check:headers": "node scripts/check-headers.js",
    "check:rate-limit": "node scripts/check-rate-limit.js",
    "check:file-validation": "node scripts/check-file-validation.js",
    "security:manual": "node scripts/manual-security-test.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@prisma/client": "^6.9.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/ua-parser-js": "^0.7.39",
    "bcryptjs": "^3.0.2",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "jszip": "^3.10.1",
    "leaflet": "^1.9.4",
    "next": "^14.1.0",
    "next-auth": "^4.24.11",
    "prisma": "^6.9.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-easy-crop": "^5.4.2",
    "react-hook-form": "^7.0.0",
    "react-leaflet": "^4.2.1",
    "sharp": "^0.34.2",
    "typescript": "^5.0.0",
    "ua-parser-js": "^2.0.3",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.10",
    "@types/leaflet": "^1.9.18",
    "@types/qrcode": "^1.5.5",
    "artillery": "^2.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "9.29.0",
    "eslint-config-next": "15.3.3",
    "jest": "^29.0.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "lib/**/*.js",
      "app/api/**/*.ts",
      "app/api/**/*.js",
      "!**/node_modules/**"
    ]
  }
}
